<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_158sdp"
            android:layout_height="@dimen/_158sdp"
            app:cardBackgroundColor="#f8f8f8"
            app:cardCornerRadius="@dimen/_5sdp"
            app:strokeWidth="0dp">

            <ImageView
                android:layout_width="@dimen/_59sdp"
                android:layout_height="@dimen/_59sdp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/letter_c" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Welcome">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/image_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card_bg"
                app:cardCornerRadius="@dimen/_80sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/iv_large_image"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_gravity="center"
                    android:padding="@dimen/_20sdp"
                    android:src="@drawable/letter_c" />

                <ImageView
                    android:id="@+id/iv_image_small"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_80sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/letter_c" />

                <ImageView
                    android:id="@+id/iv_rupee_small"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:src="@drawable/letter_c"

                    />
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Welcome To CaptchaKaro"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12ssp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            app:cardBackgroundColor="#F3F3F3"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_15sdp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/typing_man" />

                <EditText
                    android:id="@+id/edit_text_name"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@android:color/white"
                    android:elevation="3dp"
                    android:hint="Enter Your Name"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"

                    android:textColorHint="#8F8D8D" />

                <Button
                    android:id="@+id/btn_start"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:text="Start CaptchaKaro"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>
